[Setup]
; Setup version info
AppName=VectorP
AppVersion=1.5
DefaultDirName={pf}\VU\Dominykas-Mykolaitis
DefaultGroupName=VU\Dominykas-Mykolaitis
OutputBaseFilename=setup
PrivilegesRequired=admin
Compression=lzma
SolidCompression=yes

[Files]
; Main executable files
Source: "tests.exe"; DestDir: "{app}"; Flags: ignoreversion
Source: "vector.exe"; DestDir: "{app}"; Flags: ignoreversion

; Documentation and other files
Source: "Doxyfile"; DestDir: "{app}"; Flags: ignoreversion
Source: "Makefile"; DestDir: "{app}"; Flags: ignoreversion
Source: "README.md"; DestDir: "{app}"; Flags: ignoreversion
Source: "studentai10000.txt"; DestDir: "{app}"; Flags: ignoreversion
Source: "studentai100000.txt"; DestDir: "{app}"; Flags: ignoreversion

; Test and vector directories
Source: "test\*"; DestDir: "{app}\test"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "vector\*"; DestDir: "{app}\vector"; Flags: ignoreversion recursesubdirs createallsubdirs

; Documentation directory
Source: "dokumentacija\*"; DestDir: "{app}\dokumentacija"; Flags: ignoreversion recursesubdirs createallsubdirs

[Icons]
; Create shortcuts
Name: "{group}\VectorP"; Filename: "{app}\tests.exe"
Name: "{group}\VectorP"; Filename: "{app}\vector.exe"
Name: "{commondesktop}\VectorP"; Filename: "{app}\tests.exe"
Name: "{commondesktop}\VectorP"; Filename: "{app}\vector.exe"

[Run]
; Run the application after installation
Filename: "{app}\tests.exe"; Description: "Launch VectorP"; Flags: nowait postinstall skipifsilent